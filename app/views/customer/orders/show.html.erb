<div class="container">
<div class="row">
<div class="col-md-12 col-md-offset-1 mx-auto mt-3">

<h3>注文履歴詳細</h3>
<!--テーブル1-->
<tr>注文情報</tr>
<table class="table">
  <tr><th>注文日</th><td><%= @orders.created_at %></td></tr>
  <tr><th>配送先</th></th><td><%= @orders.address %></td></tr>
  <tr><th>支払方法</th><td><%= @orders.payment_method %></td></tr>
  <tr><th>ステータス</th><td><%= @orders.status %></td></tr>
</table>

<!--テーブル2-->
<tr>請求情報</tr>
<table class="table">
  <tr><th>商品合計</th><td><%= @orders.total_payment - @orders.shipping_cost%></td></tr>
  <tr><th>配送料</th><td><%= @orders.shipping_cost %></td></tr>
  <tr><th>ご請求額</th><td><%= @orders.total_payment %></td></tr>
</table>

<!--テーブル3-->
<table class="table">
<tr>注文内容</tr>
  <thead>
   <tr>
   <th>商品</th>
   <th>単価(税込)</th>
   <th>個数</th>
   <th>小計</th>
   </tr>
  </thead>
  <% @orders.order_details.each do |t| %>
  <tbody>
   <tr>
   <td><%= t.item.name %></td>
   <td><%= t.item.price %></td>
   <td><%= t.amount %></td>
   <td><%= t.price * t.amount%></td>
   </tr>
  </tbody>
  <%end%>
</table>
</div>
</div>
</div>