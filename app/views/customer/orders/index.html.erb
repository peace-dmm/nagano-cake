<div class="container">
<div class="row">
<div class="col-md-12 col-md-offset-1 mx-auto mt-3">
<h3>注文履歴一覧</h3>

<table class="table">

  <thead>
    <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
   <% @orders.each do |order| %>
   </tr>
    <td><%= order.created_at %></td>
    <td><%= order.address %></td>
    <td><% order.order_details.each do |detail|%>
    <%= detail.item.name %>
    <%end%>
    </td>
    <td><%= order.total_payment %></td>
    <td><%= order.status %></td>
    <td><%= link_to "注文詳細", order_path(order.id), class: "btn btn-success"%></td>
   <% end %>
   </tr>
</tbody>

</table>

</div>
</div>
</div>