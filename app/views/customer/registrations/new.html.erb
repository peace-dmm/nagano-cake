<div class='container'>
  <div class='row'>
    <div class="col-md-8 mt-5">
      <h3 class="p-3 mb-2 bg-light text-dark">新規会員登録</h3>
    </div>
  </div>

  <div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
      <div class="form-horizontal">
        <div class="form-group row">
          <%= f.label :名前, class: "col-4 control-label" %>
          <div class="col-sm">
            <%= f.label :姓, class: "col-form-label control-label col-sm-2" %>
            <%= f.text_field :last_name, autofocus: true, class: "col-8" %>
            <%= f.label :名, class: "col-form-label control-label col-sm-2" %>
            <%= f.text_field :first_name, autofocus: true, class: "col-8" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :フリガナ, class: "col-4 control-label" %>
          <div class="col-sm">
            <%= f.label :セイ, class: "col-form-label control-label col-sm-2" %>
            <%= f.text_field :last_name_kana, autofocus: true %>
            <%= f.label :メイ, class: "col-form-label control-label col-sm-2" %>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-4 control-label" %>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :郵便番号, class: "col-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :postal_code, autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class: "col-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :address, autofocus: true, size: 40 %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :電話番号, class: "col-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :telephone_number, autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード６文字以上, class: "col-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :パスワード確認用, class: "col-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-10">
            <%= f.submit "新規登録",class: "btn btn-success" %>
          </div>
        </div>
    <% end %>

      <div class="field">
        <p>
          会員登録がお済みの方は<%= render "customer/shared/links" %>
        </p>
      </div>
      </div>
</div>