<div class='container'>
  <div class='row'>
    <div class="col">
      <h3 class="title_h2 bg-light w-50">新規会員登録</h3>
    </div>
  </div>

  <div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
      <div class="form-horizontal">
        <div class="form-group row">
          <%= f.label :名前, class: "col col-xs-12 col-sm-4 col-md-3 control-label" %>
          <div>
            <%= f.label :姓 %>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.label :名 %>
            <%= f.text_field :first_name, autofocus: true %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :フリガナ, class: "col col-xs-12 col-sm-4 col-md-3 control-label" %>
          <div>
            <%= f.label :セイ, class: "col-sm-1 control-label" %>
            <%= f.text_field :last_name_kana, autofocus: true %>
            <%= f.label :メイ, class: "col-sm-1 control-label" %>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :郵便番号, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :postal_code, autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :address, autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :電話番号, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :telephone_number, autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード, class: "col-sm-4 control-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :パスワード確認用, class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-10">
            <%= f.submit "新規登録",class: "btn btn-success" %>
          </div>
        </div>
    <% end %>

      <div class="field">
        <p>
          会員登録がお済みの方は<%= render "customer/shared/links" %>からログインしてください
        </p>
      </div>
      </div>
</div>