<div class='container'>
    <div class='row'>
      <div class="col-md-8 mt-5">
        <h3 class="p-3 mb-2 bg-light text-dark">新規会員登録</h3>
      </div>
    </div>

    <div class='row my-4'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>
       <table class="m-6">
            <tr>
                <th class="p-3">名前</th>
                <td>(姓)</td>
                <td><%= f.text_field :last_name, autofocus: true %></td>
                <td>(名)</td>
                <td><%= f.text_field :first_name, autofocus: true %></td>
            </tr>
            <tr>
                <th class="p-3">フリガナ</th>
                <td>(セイ)</td>
                <td><%= f.text_field :last_name_kana, autofocus: true %></td>
                <td>(メイ)</td>
                <td><%= f.text_field :first_name_kana, autofocus: true %></td>
            </tr>
            <tr>
                <th class="p-3">メールアドレス</th>
                <td></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th class="p-3">郵便番号</th>
                <td></td>
                <td><%= f.text_field :postal_code, autofocus: true %></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th class="p-3">住所</th>
                <td></td>
                <td><%= f.text_field :address, autofocus: true, size: 40 %></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th class="p-3">電話番号(ハイフンなし)</th>
                <td></td>
                <td><%= f.text_field :telephone_number, autofocus: true %></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th class="p-3">パスワード(６文字以上)</th>
                <td></td>
                <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th class="p-3">パスワード(確認用)</th>
                <td></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <th class="p-3"></th>
                <td></td>
                <td><%= f.submit "新規登録",class: "btn btn-success m-2 px-5" %></td>
                <td></td>
                <td></td>
            </tr>
        </table>
    <% end %>
    </div>
        <div class="field">
          <p>
            会員登録がお済みの方は<%= render "customer/shared/links" %>
          </p>
        </div>
</div>