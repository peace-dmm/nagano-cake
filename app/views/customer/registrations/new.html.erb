<div class="span3">
<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "customer/shared/error_messages", resource: resource %>
<form>
 <label></label>
<td class="col-xs-10">
<%= f.text_field :last_name, autofocus: true %>
</td>
<th class="col-xs-2">名</th>
<td class="col-xs-10">
<%= f.text_field :first_name, autofocus: true %>
</td>
</tr>

<tr>
<th class="col-xs-2">セイ</th>
<td class="col-xs-10">
<%= f.text_field :last_name_kana, autofocus: true %>
</td>
<th class="col-xs-2">メイ</th>
<td class="col-xs-10">
<%= f.text_field :first_name_kana, autofocus: true %>
</td>
</tr>

<div class="field">

</div>

<div class="field">
<%= f.label :email %>
<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
<%= f.label :郵便番号 %>
<%= f.text_field :postal_code, autofocus: true %>
</div>

<div class="field">
<%= f.label :住所 %>
<%= f.text_field :address, autofocus: true %>
</div>

<div class="field">
  <th>  <%= f.label :電話番号 %><br />
   <td> <%= f.text_field :telephone_number, autofocus: true %></td>
</div>

<div class="field">
  <th>  <%= f.label :パスワード %><br />
  <th> <% if @minimum_password_length %>
  (<%= @minimum_password_length %> characters minimum)  </th>
    <% end %>
  <td>  <%= f.password_field :password, autocomplete: "new-password" %></td>
</div>
<div class="field">
<th> <%= f.label :パスワード確認用 %><br />
 <td>   <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
</div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>


<%= render "customer/shared/links" %>
