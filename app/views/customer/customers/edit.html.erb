<h1>会員情報編集</h1>
<%= form_with model: @customer, url:customers_information_path(@customer.id),method: :patch do |f| %>
<tr>
<div>
<label for="inputlastName">氏名</label>
<%= f.text_field :last_name, autofocus: true, id:"last_name"%>
<%= f.text_field :first_name, autofocus: true, id:"first_name"%></br>
</div>
<div>
<label for="input">フリガナ</label>
<%= f.text_field :last_name_kana, autofocus: true, id:"last_name_kana"%>
<%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana"%></br>
</div>
<div>
<label for="inputpostal_code">郵便番号</label>
<%= f.text_field :postal_code, autofocus: true, id:"postal_code"%></br>
</div>
<div>
<label for="inputadress">住所</label>
<%= f.text_field :address, autofocus: true, id:"address"%></br>
</div>
<div>
<label for="inputtelephone_number">電話番号</label>
<%= f.text_field :telephone_number, autofocus: true, id:"telephone_number"%></br>
</div>
<div>
<label for="inputemail">メールアドレス</label>
<%= f.text_field :email, autofocus: true, id:"email"%></br>
</div>

<%= f.submit "編集内容を保存" %>
<%= link_to "退会する",customers_quit_path %>
<% end %>
</tr>