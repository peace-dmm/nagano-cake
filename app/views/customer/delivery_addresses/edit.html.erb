<div class="container">
  <h2>配送先編集</h2>

  <div class="">
    <%= form_with model: @delivery_address do |f| %>
      <div class="form">
        <div class="form-group">
          <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <label>宛名</label>
          <%= f.text_field :name %>
        </div>
      <%= f.submit '変更内容を保存' %>
      </div>
    <% end %>
  </div>
</div>