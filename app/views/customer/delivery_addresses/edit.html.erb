<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">配送先編集</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
    <%= form_with model: @delivery_address do |f| %>
      <div class="form-horizontal">
        <div class="form-group row">
          <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group row">
          <%= f.label "住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address %>
        </div>
        <div class="form-group row">
          <%= f.label "宛名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name %>
        </div>
      <%= f.submit '変更内容を保存', class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>