<div class="container">
  <h3>配送先登録/一覧</h3>

  <div class="">
    <%= form_with model: @delivery_address_new do |f| %>
      <div class="form">
        <div class="form-group">
          <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address %>
        </div>
        <div class="form-group">
          <label>宛名</label>
          <%= f.text_field :name %>
        </div>
      <%= f.submit '新規登録' %>
      </div>
    <% end %>
  </div>

  <div class="">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_addresses.each do |delivery_address| %>
          <tr>
            <td><%= delivery_address.postal_code %></td>
            <td><%= delivery_address.address %></td>
            <td><%= delivery_address.name %></td>
            <td><%= link_to "編集する", edit_delivery_address_path(delivery_address.id), :class => "btn btn-success" %></td>
            <td><%= link_to "削除する", delivery_address_path(delivery_address.id), method: :delete, :class => "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>