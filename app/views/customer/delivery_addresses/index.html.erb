<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">配送先登録/一覧</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
    <%= form_with model: @delivery_address_new do |f| %>
      <div class="form-horizontal">
        <div class="form-group row">
          <%= f.label "郵便番号(ハイフンなし)", class: "col-sm-3 control-label" %>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group row">
          <%= f.label "住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address %>
        </div>
        <div class="form-group row">
          <%= f.label "宛名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name %>
        </div>
      <%= f.submit '新規登録', class: "btn btn-primary my-3" %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_addresses.each do |delivery_address| %>
          <tr>
            <td><%= delivery_address.postal_code %></td>
            <td><%= delivery_address.address %></td>
            <td><%= delivery_address.name %></td>
            <td>
              <%= link_to "編集する", edit_delivery_address_path(delivery_address.id), :class => "btn btn-success" %>
              <%= link_to "削除する", delivery_address_path(delivery_address.id), method: :delete, :class => "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>