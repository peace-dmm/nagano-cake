<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">商品編集</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
      <%= form_with model: @item, url: edit_admin_item_path, local: true do |f| %>

        <div class="form-group row">
          <%= f.label "商品画像", class: "col-form-label" %>
          <%= f.attachment_field :image, class: "file" %>
        </div>

        <div class="form-group row">
          <%= f.label "商品名", class: "col-form-label" %>
          <%= f.text_field :name, autofocas: true, class: "col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "商品説明", class: "col-form-label" %>
          <%= f.text_area :introduction, autofocas: true, class: "col-sm-3" %>
        </div>

        <div class="form-group row">
          <%= f.label "ジャンル", class: "col-form-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label "ステータス", class: "col-form-label" %>
          <div class="row">
            <ul>
              <li>
                <%= f.radio_button :is_active, :true, checked: true %>
                <%= f.label "販売中" %>
              </li>
            </ul>

            <ul>
              <li>
                <%= f.radio_button :is_active, :false %>
                <%= f.label "販売停止中" %>
              </li>
            </ul>
          </div>
        </div>

        <div class="action">
          <%= f.submit "変更を保存", class: "btn btn-action col-md-2 btn-create" %>
        </div>
      <% end %>
    </div>
  </div>
</div>