<h1>商品新規登録</h1>
<!--<p>Find me in app/views/item/new.html.erb</p>-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col'>
      <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
        <div class ="form-group">
          <%= f.label "商品", class: "col-form-label" %>
          <%= f.text_field :name %>
        </div>
        <div class ="form-group">
          <%= f.label "商品説明", class: "col-form-label" %>
          <%= f.text_field :introduction %>
        </div>
        <div class ="form-group">
          <%= f.label "商品", class: "col-form-label" %>
          <%= f.text_field :name %>
        </div>

        <%#= f.label :title %>
        <%#= f.text_field :title, class: 'form-control book_title' %>
        <div class="action">
          <%= f.submit "新規登録" %>
        </div>
      <%end%>
    </div>
  </div>
</div>
