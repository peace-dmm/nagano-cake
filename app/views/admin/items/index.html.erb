<div class="container">
  <div class="row">
    <div class="mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">商品一覧</h5>
      <div class="pull-right">
      <%= link_to new_admin_item_path do %>
        <i class="fa fa-solid fa-plus"></i>
      <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 col-md-offset-1 mx-auto mt-3">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td style="width: 400px;"><%= link_to item.name, admin_item_path(item), class: "link_text link_border" %></td>
              <td><%= item.price.to_s(:delimited) %></td><!--to_s文字列に変換  3桁区切り(:delimited)-->
              <td style="width: 400px;"><%= item.genre.name %></td>
              <% if item.is_active == true %>
                <td class="text-success font-weight-bold">販売中</td>
              <% else %>
                <td class="text-secondary font-weight-bold">販売停止中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%#= paginate @items %>
</div>