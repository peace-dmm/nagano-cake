<%#= flash[:notice] %>
<%#if @book.errors.any? %>
<%#= @book.errors.count %>
<ul>
<%# @book.errors.full_messages.each do |message| %>
<li><%#= message %></li>
<%# end %>
<%# end %>
<div class='container'>
<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>さんの会員情報編集</h1>
<%= form_with model: @customer do |f| %>
<tr>
<div>
<label for="inputlastName">氏名</label></br>
<%= f.text_field :last_name, autofocus: true, id:"last_name"%>
<%= f.text_field :first_name, autofocus: true, id:"first_name"%>
</div>
<div>
<label for="input">フリガナ</label></br>
<%= f.text_field :last_name_kana, autofocus: true, id:"last_name_kana"%>
<%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana"%>
</div>
<div>
<label for="inputpostal_code">郵便番号</label></br>
<%= f.text_field :postal_code, autofocus: true, id:"postal_code"%>
</div>
<div>
<label for="inputadress">住所</label></br>
<%= f.text_field :address, autofocus: true, id:"address"%>
</div>
<div>
<label for="inputtelephone_number">電話番号</label></br>
<%= f.text_field :telephone_number, autofocus: true, id:"telephone_number"%>
</div>
<div>
<label for="inputemail">メールアドレス</label></br>
<%= f.text_field :email, autofocus: true, id:"email"%>
</div>

<%= f.submit "変更を保存" %>
<% end %>


</tr>
</div>
</div>
</div>