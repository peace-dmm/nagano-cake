
<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with model: @customer, url:admin_customer_path(@customer.id),method: :patch do |f| %>
<form class="form-horizontal">
<div class="form-group">
<label for="inputlastName" class="col-xs-6 col-md-2 control-label">氏名</label>
<%= f.text_field :last_name, autofocus: true, id:"last_name"%>
<%= f.text_field :first_name, autofocus: true, id:"first_name"%></br>
</div>
<div class="form-group">
<label for="input" class="col-xs-6 col-md-2 control-label">フリガナ</label>
<%= f.text_field :last_name_kana, autofocus: true, id:"last_name_kana"%>
<%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana"%></br>
</div>
<div class="form-group">
<label for="inputpostal_code" class="col-xs-6 col-md-2 control-label">郵便番号</label>
<%= f.text_field :postal_code, autofocus: true, id:"postal_code"%></br>
</div>
<div class="form-group">
<label for="inputadress" class="col-xs-6 col-md-2 control-label">住所</label>
<%= f.text_field :address, autofocus: true, id:"address"%></br>
</div>
<div class="form-group">
<label for="inputtelephone_number" class="col-xs-6 col-md-2 control-label">電話番号</label>
<%= f.text_field :telephone_number, autofocus: true, id:"telephone_number"%></br>
</div>
<div class="form-group">
<label for="inputemail" class="col-xs-6 col-md-2 control-label">メールアドレス</label>
<%= f.text_field :email, autofocus: true, id:"email"%></br>
</div>
<div class="form-group">
<label for="inputis_deleted" class="col-xs-6 col-md-2 control-label">会員ステータス</label>
<%= f.radio_button :is_deleted, false %>
<%= f.label :is_deleted_false,"有効" %>
<%= f.radio_button :is_deleted, true %>
<%= f.label :is_deleted_true,"退会" %>
</div>
<%= f.submit "変更を保存", class: "btn btn-primary" %>
<% end %>
</div>