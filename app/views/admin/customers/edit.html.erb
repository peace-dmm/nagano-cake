<div class="container">
<div class="col-md-7">

<div class="m-5"><h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3></div>

<%= form_with model: @customer, url:admin_customer_path(@customer.id),method: :patch do |f| %>
<table class="table">
<tr>
<th class="col-xs-2">氏名</th>
<td class="col-xs-10">
<%= f.text_field :last_name, autofocus: true, id:"last_name"%>
<%= f.text_field :first_name, autofocus: true, id:"first_name"%>
</td>
</tr>
<tr>
<th class="col-xs-2">フリガナ</th>
<td class="col-xs-10">
<%= f.text_field :last_name_kana, autofocus: true, id:"last_name_kana"%>
<%= f.text_field :first_name_kana, autofocus: true, id:"first_name_kana"%>
</td>
</tr>
<tr>
<th class="col-xs-2">郵便番号</th>
<td class="col-xs-10">
<%= f.text_field :postal_code, autofocus: true, id:"postal_code"%>
</td>
</tr>
<tr>
<th class="col-xs-2">住所</th>
<td class="col-xs-10">
<%= f.text_field :address, autofocus: true, id:"address"%>
</td>
</tr>
<tr>
<th class="col-xs-2">フリガナ</th>
<td class="col-xs-10">
<%= f.text_field :telephone_number, autofocus: true, id:"telephone_number"%>
</td>
</tr>
<tr>
<th class="col-xs-2">メールアドレス</th>
<td class="col-xs-10">
<%= f.text_field :email, autofocus: true, id:"email"%>
</tr>
<tr>
<th class="col-xs-2">会員ステータス</th>
<td class="col-xs-10">
<%= f.radio_button :is_deleted, false %>
<%= f.label :is_deleted_false,"有効" %>
<%= f.radio_button :is_deleted, true %>
<%= f.label :is_deleted_true,"退会" %>
</td>
</tr>
</table>
<div class="row text-right">
<%= f.submit "変更を保存", class: "btn btn-primary" %>
</div>
<% end %>

</div>
</div>
