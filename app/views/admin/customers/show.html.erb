<div class="container">
<div class="col-md-7">

<div class="p-2 bd-highlight">
<h3><td><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</td></h3>
</div>
<table class="table table-bordered">
<tr>
<td>会員ID</td><td><%=@customer.id %></td>
</tr>
<tr>
<td>氏名</td><td><%= @customer.last_name %><%= @customer.first_name %></td>
</tr>
<tr>
<td>カナ</td><td><%=@customer.last_name_kana %><%= @customer.first_name_kana %></td>
</tr>
<tr>
<td>郵便番号</td><td><%=@customer.postal_code %></td>
</tr>
<tr>
<td>住所</td><td><%=@customer.address %></td>
</tr>
<tr>
<td>電話番号</td><td><%=@customer.telephone_number %></td>
</tr>
<tr>
<td>メールアドレス</td><td><%= @customer.email %></td>
</tr>
<tr>
<td>会員ステータス</td>
<td><% if @customer.is_deleted == true %>
<p class="text-success">
有効
</p>
<% else %>
<p class="text-danger">
退会済み
</p>
<% end %></td>
</tr>
</table>
<tr>
<td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-secondary"%></td>
</tr>
<tr>
<td><%= link_to "注文履歴一覧を見る", edit_admin_customer_path(@customer.id), class: "btn btn-secondary"%></td>
</tr>
</thead>
</tbody>
</div>
