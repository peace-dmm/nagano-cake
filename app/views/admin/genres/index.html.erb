<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">ジャンル一覧・追加</h5>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto col-md-12 mt-3">
    <%= form_with model: @genre_new, url:admin_genres_path do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル名", class: "col-form-label" %>
        <%= f.text_field :name, :placeholder => "ジャンル名" %>
        <%= f.submit "新規登録", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row">
      <div class="col-md-12 col-md-offset-1 mx-auto mt-3">
        <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), :class => "btn btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>


</div>
