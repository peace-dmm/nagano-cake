<div class="container">
  <h2>ジャンル一覧・追加</h2>

  <div class="row">
    <%= form_with model: @genre_new do |f| %>
      <p>ジャンル名</p>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
    <% end %>
  </div>

    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre.id), :class => "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
