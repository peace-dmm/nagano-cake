<div class="container">
<div class="row">
<div class="col-md-12 col-md-offset-1 mx-auto mt-3">
<h3>注文履歴詳細</h3>

<!--テーブル1-->
<table class="table">
  <tr><th>購入者</th><td><%= @orders.name %></td></tr>
  <tr><th>注文日</th></th><td><%= @orders.created_at %></td></tr>
  <tr><th>配送先</th><td><%= @orders.address %></td></tr>
  <tr><th>支払方法</th><td><%= @orders.payment_method %></td></tr>
  <tr><th>注文ステータス</th>
  <td><%= form_with model: @orders, url: admin_order_path, method: :patch, local: true do |t| %>
      <%= t.select :status, Order.statuses.keys.map{|k|[I18n.t("enums.order.status.#{k}"),k]}, class: "status" %>
      <%= t.submit "更新" , class: "btn btn-outline-success" %>
      <% end %></td></tr>
</table>

<!--テーブル2-->
<table class="table">
  <thead>
   <th>商品名</th>
   <th>単価(税込)</th>
   <th>数量</th>
   <th>小計</th>
   <th>製作ステータス</th>
  </thead>
  <% @orders.order_details.each do |t| %>
  <tbody>
   <td><%= t.item.name %></td>
   <td><%= t.item.price %></td>
   <td><%= t.amount %></td>
   <td><%= t.price * t.amount%></td>
   <td><%= form_with model: @order_details, url: admin_order_path, method: :patch, local: true do |t| %>
      <%= t.select :making_status, OrderDetail.making_statuses.keys.map{|k|[I18n.t("enums.order_detail.making_status.#{k}"),k]}, class: "making_status" %>
      <%= t.submit "更新" , class: "btn btn-outline-success" %>
      <% end %></td>
  </tbody>
  <%end%>
</table>
</div>
</div>
</div>