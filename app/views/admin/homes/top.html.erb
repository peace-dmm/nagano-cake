<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h5 class="p-3 mb-2 bg-light text-dark">注文履歴一覧</h5>
    </div>
  </div>


  <div class="row">
      <div class="col-md-12 col-md-offset-1 mx-auto mt-3">
        <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at %>
              <%end%>
            </td>
            <td><%= order.name %></td>
            <td><%#= order.order_details.amount%></td>
        <% end %>
        </tbody>
      </table>
      </div>
    </div>


</div>
